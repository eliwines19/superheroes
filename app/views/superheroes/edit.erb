<h2> Edit <%= @superhero.name %> </h2>

<form method="post" action="/superheroes/<%=@superhero.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p>Hero's Name: <input type="text" name="name" value="<%= @superhero.name %>"></p>
  <p>Hero's Superpower: <input type="text" name="superpower" value="<%= @superhero.superpower %>"></p>
  <p>Hero's Motto: <input type="text" name="motto" value="<%= @superhero.motto %>"></p>
  <p>Hero's Suit Color: <input type="text" name="suit_color" value="<%= @superhero.suit_color %>"></p>
  <p>Hero's City: <input type="text" name="city" value="<%= @superhero.city %>"></p>
  <p>Hero's Age: <input type="integer" name="age" value="<%= @superhero.age %>"></p>
  <input type="submit" value="Change Hero">
</form>
