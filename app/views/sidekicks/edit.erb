<h1>Edit <%= @sidekick.name %></h1>

<form action="/sidekicks/<%=@sidekick.id %>" method="POST">
  <label> Sidekick Name </label>
  <input type="text" name="name" value="<%=@sidekick.name %>"> </br>

  <label> Sidekick Superpower </label>
  <input type="text" name="superpower" value="<%=@sidekick.superpower%>"> </br>

  <label> Which Superhero should this Sidekick belong to? </label>
  <select name="superhero_id">
    <% current_user.superheroes.each do |superhero| %>
      <option value=<%=superhero.id %> <%= "selected" if superhero.id==@sidekick.superhero.id %> ><%= superhero.name %></option>
    <% end %>
  </select>

  <input type="submit" value="Update">
</form>
